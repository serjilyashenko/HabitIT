{
  "name": "habitit",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "npm run test && vite build",
    "preview": "vite preview",
    "prettier:check": "prettier --check --ignore-path .gitignore . --loglevel warn",
    "prettier:fix": "prettier --write --ignore-path .gitignore .",
    "eslint:check": "eslint --ext .js,.jsx --ignore-path .gitignore . --max-warnings=0",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "check:all": "npm run prettier:check && npm run eslint:check && npm run test",
    "pre-commit-hook": "lint-staged",
    "postinstall": "cp ./git-hooks/pre-commit ./.git/hooks"
  },
  "lint-staged": {
    "**/*.*": [
      "npm run prettier:check",
      "jest --findRelatedTests"
    ],
    "**/*.+(js|mjs|ts|jsx|tsx)": [
      "npm run eslint:check"
    ]
  },
  "dependencies": {
    "classnames": "2.3.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "7.19.1",
    "@babel/preset-env": "7.19.1",
    "@babel/preset-react": "7.18.6",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@vitejs/plugin-react": "2.1.0",
    "eslint": "8.22.0",
    "eslint-plugin-jest": "27.0.4",
    "eslint-plugin-react": "7.31.8",
    "jest": "29.0.3",
    "jest-environment-jsdom": "29.0.3",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "vite": "3.1.2",
    "vite-plugin-svgr": "2.2.1"
  }
}
